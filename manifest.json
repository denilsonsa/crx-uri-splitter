{
  "manifest_version": 3,
  "name": "URI Splitter",
  "short_name": "URI Splitter",
  "description": "Easily and quickly edit the URL/URI from the current page",
  "author": "Denilson S\u00e1 Maia",
  "version": "1.0",
  "homepage_url": "https://github.com/denilsonsa/crx-uri-splitter/",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    },
    "default_popup": "popup.html",
    "default_title": "URI Splitter"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+L"
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "incognito": "spanning",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_security_policy": {},
  "browser_specific_settings": {
    "gecko": {
      "id": "uri-splitter@denilson.sa.nom.br"
    }
  }
}
